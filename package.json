{
  "name": "agilelocal",
  "version": "1.0.0",
  "description": "AgileLocal 敏捷研发项目管理平台",
  "main": "./out/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "postinstall:skip": "echo Skipping native module rebuild",
    "rebuild:native": "powershell -ExecutionPolicy Bypass -File rebuild-native.ps1",
    "clean:native": "rimraf node_modules/better-sqlite3-multiple-ciphers/build",
    "clean:all": "rimraf node_modules out dist",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder",
    "preview": "electron-vite preview"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@octokit/core": "^6.1.6",
    "@octokit/plugin-retry": "^7.2.1",
    "@vueuse/core": "^11.3.0",
    "adm-zip": "^0.5.10",
    "bcryptjs": "^3.0.3",
    "better-sqlite3-multiple-ciphers": "^12.5.0",
    "echarts": "^5.6.0",
    "electron-log": "^5.4.3",
    "fs-extra": "^11.2.0",
    "kysely": "^0.28.8",
    "lodash-es": "^4.17.21",
    "naive-ui": "^2.43.2",
    "node-schedule": "^2.1.1",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "sortablejs": "^1.15.6",
    "vue": "^3.5.25",
    "vue-draggable-next": "^2.3.0",
    "vue-router": "^4.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "autoprefixer": "^10.4.20",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1",
    "electron-vite": "^5.0.0",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "build": {
    "appId": "com.agilelocal.app",
    "productName": "AgileLocal",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "!**/.vscode/*",
      "!src/**/*",
      "!*.md",
      "!*.log",
      "!*.config.ts",
      "!*.config.js",
      "!tsconfig.json",
      "!electron-builder.yml",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AgileLocal"
    }
  }
}
